{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "outDir": "build",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"]
}
