{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "../build",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "traceResolution": false,
    "paths": {
      "chain-events": [
        "../../packages/chain-events"
      ],
      "chain-events/*": [
        "../../packages/chain-events/*"
      ],
      "snapshot-listener/*": [
        "../../packages/snapshot-listener/*"
      ]
    }
  },
  "extends": "../../tsconfig.json",
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules",
    "./test",
    "build",
    "dist"
  ]
}
