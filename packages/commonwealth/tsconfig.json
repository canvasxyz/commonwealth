{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./build",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "common-common/*": ["./packages/common-common/*"],
      "token-balance-cache/*": ["./packages/token-balance-cache/*"],
      "discord-bot/*": ["packages/discord-bot/*"],
      "*": ["./*", "shared/*", "client/scripts/*"]
    }
  },
  "include": [
    "./client",
    "./client/scripts",
    "./shared",
    "./test",
    "./globals.d.ts",
    "./server",
    "./server.ts",
    "./scripts"
  ],
  "exclude": ["./node_modules"]
}
