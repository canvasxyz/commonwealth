{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./build",
    "skipLibCheck": true,
    "paths": {
      "@hicommonwealth/core/*": ["libs/core/src/*"],
      "*": [
        "packages/commonwealth/*",
        "packages/commonwealth/shared/*",
        "packages/commonwealth/client/scripts/*"
      ]
    }
  },
  "include": [
    "./client",
    "./client/scripts",
    "./shared",
    "./test",
    "./globals.d.ts",
    "./server",
    "./server.ts",
    "./scripts"
  ],
  "exclude": ["./node_modules"]
}
