{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "rootDir": ".",
    "outDir": "build",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "client/*": ["./client/*"],
      "server/*": ["./server/*"],
      "adapters/*": ["./shared/adapters/*"],
      "chain/*": ["./shared/chain/*"],
      "types": ["./shared/types"],
      "utils": ["./shared/utils"],
      "abi_utils": ["./shared/abi_utils"],
      "canvas": ["./shared/canvas"],
      "permissions": ["./shared/permissions"],
      "state": ["./client/scripts/state"],
      "identifiers": ["./client/scripts/identifiers"],
      "helpers": ["./client/scripts/helpers"],
      "canvas/*": ["./client/scripts/helpers/canvas"],
      "stores": ["./client/scripts/stores"],
      "state/*": ["./client/scripts/state/*"],
      "models/*": ["./client/scripts/models/*"],
      "views/*": ["./client/scripts/views/*"],
      "controllers/*": ["./client/scripts/controllers/*"],
      "stores/*": ["./client/scripts/stores/*"],
      "hooks/*": ["./client/scripts/hooks/*"],
      "navigation/*": ["./client/scripts/navigation/*"],
      "helpers/*": ["./client/scripts/helpers/*"],
      "utils/*": ["./client/scripts/utils/*"],
      "lib/*": ["./client/scripts/lib/*"]
    }
  },
  "include": [
    "server.ts",
    "./client",
    "./client/scripts",
    "./shared",
    "./globals.d.ts",
    "./server",
    "./scripts"
  ],
  "references": [
    { "path": "../../libs/core" },
    { "path": "../../libs/adapters" },
    { "path": "../../libs/common-common" },
    { "path": "../../libs/chains" }
  ]
}
