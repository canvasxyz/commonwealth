{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "traceResolution": false,
    "baseUrl": ".",
    "paths": {
      "@hicommonwealth/*": ["libs/*/src"]
    }
  },
  "exclude": ["**/build", "**/__tests__", "**/__mocks__"]
}
