{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
      {
        "name": "Node Attach Debugger",
        "port": 9229,
        "request": "attach",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "type": "node"
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch React App",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}/packages/commonwealth/client",
        "userDataDir": false
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha Current File",
        "program": "${workspaceFolder}/packages/commonwealth/node_modules/ts-mocha/bin/ts-mocha",
        "cwd": "${workspaceFolder}/packages/commonwealth",
        "args": [
          "--timeout",
          "999999",
          "--colors",
          "${file}"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": [
          "<node_internals>/**/*.js"
        ]
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Node Process Attach",
        "processId": "${command:PickProcess}"
      },
  ]
}